		<xsl:if test="$first = '' and $rest = '' ">
			<!--br/-->
		</xsl:if>
		<xsl:if test="$rest != ''">
			<xsl:value-of select="$rest"/><br/>
		</xsl:if>
		<xsl:if test="$rest = ''">
			<xsl:value-of select="$line"/><br/>
		</xsl:if>

	</xsl:template>

